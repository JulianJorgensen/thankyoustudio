extends layout.pug

block content
  tr
    td.alert(class='alert-primary')
  tr
    td.content-wrap
      table(width='100%', cellpadding='0', cellspacing='0')
        tr
          td.content-block Hi there,
        tr
          td.content-block We've received a message from #{name} with following details:
        tr
          td.content-block
            | Email: #{email}
            | Message:
            .italic #{message}
